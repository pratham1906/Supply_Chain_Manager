@model SupplyChainManagement.Models.VendorDetail
@{
    ViewBag.Title = "Contact Vendor";
    var email = Model.Email;
}

<div class="page-content d-flex align-items-stretch">
    @Html.Partial("_navbar")
    <div class="content-inner">
        @Html.Partial("_header")
        <section class="dashboard-counts no-padding-bottom">
            <div class="container-fluid">
                <div class="row bg-white has-shadow">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="card">

                            @using (Html.BeginForm("SendMailBtn", "Vendor"))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    <h4>Contact Vendor</h4>
                                    <hr/>
                                    @Html.ValidationSummary(true, "", new {@class = "text-danger"})


                                    <div class="form-group row">
                                        <label class="col-sm-3 form-control-label" style="font-size: 18px">
                                            <strong>
                                                @Html.LabelFor(model => model.Email)
                                            </strong>
                                        </label>
                                        <div class="col-sm-9">
                                            <input type="email" name="emailId" id="emailId" class="form-control"/>
                                            @*@Html.Hidden("name", Model.Name);
                                            <input type="submit" value="SendData"/>*@

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-sm-2" for="comment">Comment:</label>
                                        <div class="col-sm-10">
                                            <textarea class="form-control" rows="5" id="comment" name="message"></textarea>
                                        </div>
                                    </div><br/><br/>

                                    <div class="form-group">
                                        <div class="col-sm-offset-2 col-sm-10">
                                            @*//<button onclick="window.location.href = '/Vendor/SendMailBtn/'" type="submit" class="btn btn-default">Send</button>*@
                                            <button type="submit" value="SendData" class="btn btn-default">Send</button>
                                        </div>
                                    </div>


                                    

                                </div>
                            }

                            </div>
                    </div>
                </div>
            </div>
        </section>
        <br />
        <br />
        <script>
            $(document).ready(function() {
                $('#emailId').val("@email");

            });
 
        </script>
        @Html.Partial("_footer")
    </div>
</div>

