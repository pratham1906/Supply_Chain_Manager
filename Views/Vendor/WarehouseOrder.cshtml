@model IEnumerable<SupplyChainManagement.Models.WarehouseVendorRequest>
@{
    ViewBag.Title = "All Vendor Order Request";
}

<div class="page-content d-flex align-items-stretch">
    @Html.Partial("_navbar")
    <div class="content-inner">
        @Html.Partial("_header")
        <section class="dashboard-counts">
            <div class="container-fluid">
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="card">
                            <div class="TableHeading">
                                <h2>ALL VENDOR ORDER REQUESTS</h2>
                            </div>
                            <div class="body">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped table-hover js-basic-example dataTable" id="orders">
                                        <thead>
                                            <tr>
                                                <th>ORDER ID</th>
                                                <th>PRODUCT ID</th>
                                                <th>QUANTITY</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>ORDER ID</th>
                                                <th>PRODUCT ID</th>
                                                <th>QUANTITY</th>
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <th>@item.OID</th>
                                                    <td>@item.Pid</td>
                                                    <td>@item.Quantity</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <br />
        <script>
            for (var i = 1; i <= 5; i++) {
                document.getElementById(i).className = "";
            }
            document.getElementById("4").className = "active";
        </script>
        @Html.Partial("_footer")
    </div>
</div>


