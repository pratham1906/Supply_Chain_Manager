@model List<SupplyChainManagement.ViewModels.WarehouseCompletedOrderJoin>
@{
    ViewBag.Title = "Completed Orders";
    var newId = "";
    var preId = "";
}
<div class="page-content d-flex align-items-stretch">
    @Html.Partial("_navbar")
    <div class="content-inner">
        @Html.Partial("_header")
        <section class="dashboard-counts">
            <div class="container-fluid">
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="card">
                            <div class="TableHeading">
                                <h2>ALL WAREHOUSE ORDERS</h2>
                            </div>
                            <div class="body">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped table-hover" id="orders">
                                        <thead>
                                            <tr>
                                                <th>ID #</th>
                                                <th>PRODUCT ID</th>
                                                <th>QUANTITY</th>
                                                <th>PRICE</th>
                                                <th>DATE</th>
                                                <th>TYPE</th>
                                                <th>SENDER</th>
                                                <th>RECEIVER</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>ID #</th>
                                                <th>PRODUCT ID</th>
                                                <th>QUANTITY</th>
                                                <th>PRICE</th>
                                                <th>DATE</th>
                                                <th>TYPE</th>
                                                <th>SENDER</th>
                                                <th>RECEIVER</th>
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                newId = item.WarehouseCompletedOrdersj.OId;
                                                if (newId != preId)
                                                {
                                                    <tr>
                                                        <th>@item.WarehouseCompletedOrdersj.OId</th>
                                                        <td>@item.WarehouseCompletedOrdersj.PId</td>
                                                        <td>@item.WarehouseCompletedOrdersj.PQuantity</td>
                                                        <td>@item.WarehouseCompletedOrdersj.TotalPrice</td>
                                                        <td>@item.WarehouseCompletedOrdersj.Date.ToString("dd/MM/yyyy")</td>
                                                        @if (item.WarehouseOrderTypej.type == 1)
                                                        {
                                                            <td>Inbound</td>

                                                        }
                                                        else
                                                        {
                                                            <td>Outbound</td>
                                                        }

                                                        <td>@item.WarehouseOrderDetailj.Sender</td>
                                                        <td>@item.WarehouseOrderDetailj.Receiver</td>
                                                    </tr>
                                                    preId = item.WarehouseCompletedOrdersj.OId;
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <th></th>
                                                        <td>@item.WarehouseCompletedOrdersj.PId</td>
                                                        <td>@item.WarehouseCompletedOrdersj.PQuantity</td>
                                                        <td>@item.WarehouseCompletedOrdersj.TotalPrice</td>
                                                        <td>-</td>
                                                        <td>-</td>
                                                        <td>-</td>
                                                        <td>-</td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        @Html.Partial("_footer")
    </div>
</div>
<script type="text/javascript">

    for (var i = 1; i <= 12; i++) {
        document.getElementById(i).className = "";
    }
    document.getElementById("two").click();
    document.getElementById("12").className = "active";
</script>

