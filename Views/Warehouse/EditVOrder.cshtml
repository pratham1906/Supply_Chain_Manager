@model SupplyChainManagement.Models.WarehouseVendorRequest

@{
    ViewBag.Title = "Update vendor order";
}

<div class="page-content d-flex align-items-stretch">
    @Html.Partial("_navbar")
    <div class="content-inner">
        @Html.Partial("_header")
        <section class="dashboard-counts no-padding-bottom">
            <div class="container-fluid">
                <div class="col-12" style="margin: auto; width: 90%;">
                    <div class="row bg-white has-shadow">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="card">

                                @using (Html.BeginForm("EditVendorOrder", "Warehouse"))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        <h4>Update vendor order</h4>
                                        <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                        <div class="form-group row">
                                            <label class="col-sm-3 form-control-label" style="font-size: 18px">
                                                <strong>
                                                    @Html.LabelFor(model => model.OID)
                                                </strong>
                                            </label>
                                            <div class="col-sm-9">
                                                @Html.TextBoxFor(model => model.OID, new { @class = "form-control", required = "required", @readonly = "readonly" })
                                                @Html.ValidationMessageFor(model => model.OID, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-sm-3 form-control-label" style="font-size: 18px">
                                                <strong>
                                                    @Html.LabelFor(model => model.Pid)
                                                </strong>
                                            </label>
                                            <div class="col-sm-9">
                                                @Html.TextBoxFor(model => model.Pid, new { @class = "form-control", required = "required" })
                                                @Html.ValidationMessageFor(model => model.Pid, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-sm-3 form-control-label" style="font-size: 18px">
                                                <strong>
                                                    @Html.LabelFor(model => model.Quantity)
                                                </strong>
                                            </label>
                                            <div class="col-sm-9">
                                                @Html.TextBoxFor(model => model.Quantity, new { type = "number", min = 0, @class = "form-control", required = "required" })
                                                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <div class="col-sm-4 offset-sm-3">
                                                <button type="submit" class="btn btn-primary">Update Order</button>
                                            </div>
                                        </div>

                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <br />
        <br />

        @Html.Partial("_footer")
    </div>
</div>

