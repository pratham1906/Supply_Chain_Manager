@model SupplyChainManagement.ViewModels.EmployeeAdd

    @{

    }

<div class="page-content d-flex align-items-stretch">
    @Html.Partial("_navbar")
    <div class="content-inner">
        @Html.Partial("_header")
        <section class="dashboard-counts no-padding-bottom">
            <div class="container-fluid">
                <div class="row bg-white has-shadow">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="card">

                            @using (Html.BeginForm("CalculateAddedSalary", "EmployeeManagement"))
                            {
                                @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4> Calculate Salary </h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group row">
                                    <label class="col-sm-3 form-control-label" style="font-size: 18px">
                                        <strong>
                                            Employee ID 
                                        </strong>
                                    </label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.employeeManagement.Id, new { @class = "form-control", required = "required", @readonly = "readonly" })
                                        @Html.ValidationMessageFor(model => model.employeeManagement.Id, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 form-control-label" style="font-size: 18px">
                                        <strong>
                                            Name
                                        </strong>
                                    </label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.employeeManagement.Name, new { @class = "form-control", required = "required", @readonly = "readonly" })
                                        @Html.ValidationMessageFor(model => model.employeeManagement.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 form-control-label" style="font-size: 18px">
                                        <strong>
                                            Last Name
                                        </strong>
                                    </label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.employeeManagement.LastName, new { @class = "form-control", required = "required", @readonly = "readonly" })
                                        @Html.ValidationMessageFor(model => model.employeeManagement.LastName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 form-control-label" style="font-size: 18px">
                                        <strong>
                                            Position
                                        </strong>
                                    </label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.employeeManagement.Position, new { @class = "form-control", required = "required", @readonly = "readonly" })

                                        @Html.ValidationMessageFor(model => model.employeeManagement.Position, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 form-control-label" style="font-size: 18px">
                                        <strong>
                                            Enter Salary Month
                                        </strong>
                                    </label>
                                    <div class="col-sm-9">
                                        <select class="form-control" name="month">
                                            <option value="January"> January</option>
                                            <option value="Febraury"> Febraury</option>
                                            <option value="March"> March</option>
                                            <option value="April"> April</option>
                                            <option value="May"> May</option>
                                            <option value="June"> June</option>
                                            <option value="July"> July</option>
                                            <option value="August"> August</option>
                                            <option value="Spetember"> Spetember</option>
                                            <option value="October"> October</option>
                                            <option value="November"> November</option>
                                            <option value="Decemeber"> Decemeber</option>

                                        </select>

                                        @Html.ValidationMessageFor(model => model.employeeManagement.JoiningDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 form-control-label" style="font-size: 18px">
                                        <strong>
                                            Enter Number of Working Days
                                        </strong>
                                    </label>
                                    <div class="col-sm-9">
                                        <input type="number" name="Wdays" class="form-control" min="1" max="31">

                                    </div>

                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 form-control-label" style="font-size: 18px">
                                        <strong>
                                            Allowance
                                        </strong>
                                    </label>
                                    <div class="col-sm-9">
                                        <input type="number" name="allowance" class="form-control" min="100" max="5000">

                                    </div>

                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 form-control-label" style="font-size: 18px">
                                        <strong>
                                            Year
                                        </strong>
                                    </label>
                                    <div class="col-sm-9">
                                        <input type="number" name="year" class="form-control" min="2018" max="2025">

                                    </div>

                                </div>



                                <div class="form-group row">
                                    <div class="col-sm-4 offset-sm-3">
                                        <button type="button" class="btn btn-secondary" onclick="window.location.href = 'Index'">Cancel</button>
                                        <button type="submit" class="btn btn-primary">Generate</button>
                                    </div>
                                </div>

                            </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </section>
        <br />
        <br />

        <script>
            document.getElementById("1").className = "";
            document.getElementById("2").className = "";
            document.getElementById("3").className = "active";
            document.getElementById("4").className = "";
            document.getElementById("5").className = "";
        </script>

        @Html.Partial("_footer")
    </div>
</div>

